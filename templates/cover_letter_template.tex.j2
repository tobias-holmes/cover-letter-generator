\begin{document}

% Sender info
\setkomavar{fromname}{ {{- sender.name -}} }
\setkomavar{fromaddress}{
{{- sender.address.street }}\\%
{{ sender.address.zip }} {{ sender.address.city }}\\%
{{ sender.address.country }}
}
\setkomavar{fromemail}[\faEnvelope]{\href{mailto:{{- sender.email -}} }{ {{ sender.email -}} }}
\setkomavar{fromurl}[\faGlobe]{\href{https://{{- sender.url -}} }{ {{ sender.url -}} }}

% Date and subject
\setkomavar{date}{ {% if date %} {{- date -}} {% else %} \today {% endif %} }
\setkomavar{subject}{ {{- subject -}} }

% Recipient info
\begin{letter}{ \textbf{ {{- recipient.company -}} }\\%
	{{- recipient.fname -}} {{- recipient.lname -}}\\%
	{{ recipient.address.street }}\\%
	{{ recipient.address.zip }} {{ recipient.address.city }}\\%
	{{ recipient.address.country }}}

	\opening{ {% if recipient.lname %}Dear {{ recipient.honorific }} {{ recipient.lname -}}{% else %} {{- opening -}} {% endif %},}
	{% for block in body %}
	{{ block }}
	{% endfor %}
	{%if start_date %}
	{{- body_start_date -}}
	{% endif %}{%if salary_expectation %}{{- body_salary -}}{% endif %}
	\closing{ {% if closing %} {{- closing -}} {% else %} Sincerely, {% endif %}}

\end{letter}
\end{document}
